<Window x:Class="PedidosSuplidores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PedidosSuplidores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation = "Horizontal" Margin="0,0,0,375">
        <Menu Height="18">
            <MenuItem Header="Registros" >
                <MenuItem x:Name="rProductos" Header="Registro de Productos" Click = "rProductos_Click"/>
                <MenuItem x:Name="rSuplidores" Header="Registro de Suplidores" Click = "rSuplidores_Click"/>
                <MenuItem x:Name="rOrdenes" Header="Registro de Ordenes" Click = "rOrdenes_Click"/>
            </MenuItem>
        </Menu>

        <Menu Height="18">
            <MenuItem Header="Consultas">
                <MenuItem x:Name="cProductos" Header="Consulta de Productos" Click = "cProductos_Click"/>
                <MenuItem x:Name="cSuplidores" Header="Consulta de Suplidores" Click = "cSuplidores_Click"/>
                <MenuItem x:Name="cOrdenes" Header="Consulta de ordenes" Click = "cOrdenes_Click"/>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
